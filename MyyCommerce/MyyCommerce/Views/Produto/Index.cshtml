@model MyyCommerce.Models.ProdutoViewModel;


<div class="col-lg-12 col-md-12 mb-4">
    <div class="card">
        <div class="card-body">
            <div class="card-title">
                <h5>
                    Produtos
                    <span class="SlowAddBtn" data-toggle="modal" data-target="#modalProduto-add" style="float:right;"><i class="fa fa-plus"></i></span>
                </h5>

            </div>
            <form asp-action="Filtrar" asp-controller="Produto" id="regForm" method="POST" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#form-div-produto">
                <div class="row">
                    <div class="form-group col-md-1" style="padding-top: 5px;">
                        <h5>Filtro:</h5>
                    </div>
                    <div class="form-group col-md-2">
                        <input class="form-control" name="FilterNome" id="FilterNome" placeholder="Nome" />
                    </div>
                    <div class="form-group col-md-2">
                        <select class="form-control" id="FilterCategoria" name="FilterCategoria" asp-items="Html.GetEnumSelectList(typeof(MyyCommerce.Utils.Enums.eCategoria))">
                            <option value="">Categorias</option>
                        </select>
                    </div>
                    <div class="form-group col-md-2">
                        <select class="form-control" id="FilterGenero" name="FilterGenero" asp-items="Html.GetEnumSelectList(typeof(MyyCommerce.Utils.Enums.eGeneroProduto))">
                            <option value="">Gênero</option>
                        </select>
                    </div>
                    <div class="form-group col-md-2">
                        <select class="form-control" id="FilterAtivo" name="FilterAtivo">
                            <option value="">Ativo?</option>
                            <option value="true">Sim</option>
                            <option value="false">Não</option>
                        </select>
                    </div>
                    <div class="form-group col-md-3">
                        <button type="submit" class="btn btn-primary btnSaveSlow">Buscar</button>
                    </div>
                </div>
            </form>
            <partial name="_ProdutoTablePartial" model="Model" />
        </div>
    </div>
</div>


<script>
    $('.SlowAddBtn').click(function () {
        $.ajax({
            url: '@Url.Action("GetEmpty", "Produto")',
            type: 'GET',
            success: function (partialView) {
                $('#form-partial').html(partialView);
            }
        });
    });

</script>